{
	"name": "drizzle-toolbelt",
	"version": "1.1.1",
	"description": "Set of tools for drizzle-orm.",
	"scripts": {
		"build": "tsup --dts --dts-resolve",
		"test": "bun test src",
		"check": "bunx @biomejs/biome check --apply ./src",
		"release": "changeset publish"
	},
	"keywords": [
		"drizzle",
		"orm",
		"sql",
		"sqlite",
		"postgres",
		"pg",
		"postgresql",
		"mysql",
		"database",
		"db"
	],
	"author": "fredericoo",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "MIT",
	"files": [
		"/dist"
	],
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.1",
		"@changesets/cli": "^2.27.1",
		"@types/bun": "^1.1.0",
		"@types/lodash": "^4.17.0",
		"lodash": "^4.17.21",
		"tsup": "^8.0.2",
		"type-testing": "^0.2.0",
		"typescript": "^5.4.5"
	}
}
